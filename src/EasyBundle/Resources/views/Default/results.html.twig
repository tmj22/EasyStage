
{% extends 'base.html.twig' %}
{% block titulo %}Offers{% endblock %}
{% block contenido %}
<div id="offersBanner" class="banner testimonial text-white parallax" data-stellar-background-ratio="0.5" style="background-image: url(img/offers-bg.jpg);" id="testimonial-trigger" data-stellar-background-ratio="0.5"><h1 class="text-center" style="margin-top:40px;">Internship Offers Abroad</h1><hr class="ruler"></div>
<!-- Begin buscador -->
<section id="cta-section" style="    margin-bottom: -190px;">
	<div class="cta">
		<div class="container">
				<div class="row">

						<div class="col-md-9">
								<h1>Search Offers</h1>

						 </div>

				 </div>
						<div class="container">



						<form action="filter" role="search"  method="GET">
				<div class="form-group-stylish row">

					<div class="col-sm-3">
						<label for="type1" class="control-label">Area</label>
						<select class="form-control" name="area" id="area">
							<optgroup label="-Hotels & Restaurants-"></optgroup>
							<option value="1">Reception & Booking</option>
							<option value="2">Bar & Restaurant</option>
							<option value="3">Kitchen</option>
							<option value="4">Room Service/Housekeeping</option>
							<option value="5">Events</option>
							<option value="6">Human Resources</option>
							<option value="7">Maintenance</option>
							<option value="8">Gardening</option>
							<option value="9">Entertainers</option>
							<optgroup label="-Wellness-"></optgroup>
							<option value="10">Hairdresser</option>
							<option value="11">Beautician</option>
							<option value="12">Spa</option>
							<optgroup label="-Technology-"></optgroup>
							<option value="13">Information Technician</option>
							<option value="14">Web Design & Development</option>
							<option value="15">Graphic Design</option>
							<optgroup label="-Engineering-"></optgroup>
							<option value="16">Automotive</option>
							<option value="17">Agriculture & Food</option>
							<option value="18">Industry & Materials</option>
							<option value="19">Electrical & Electronics</option>
							<option value="20">Metallurgical</option>
							<option value="21">Arquitecture & Construction</option>
							<optgroup label="-Business & Communication-"></optgroup>
							<option value="22">Administration</option>
							<option value="23">Finances & Accounting</option>
							<option value="24">Marketing & Commercial</option>
							<option value="25">Social Networks & Communication</option>
							<option value="26">Customer Service</option>
							<option value="27">Logistics</option>
						</select>

					</div>
						<div class="col-sm-3">
							<label for="type1" class="control-label">City</label>
							<select class="form-control" name="location" id="location">
								<option value="1">Valencia</option>
								<option value="2">Barcelona</option>
								<option value="3">Balear Islands</option>
							</select>
						</div>


						<div class="col-sm-3">
							<button type="submit" class="btn btn-default btn-lg"style="margin-top:10px;">Search</button>
						</div>

				</div>
				</form>




					</div> <!-- /.row -->
			</div> <!-- /.container -->
	</div>
</section>
					 <!-- ========= Begin offers =========-->
					 <div class="page-header-wrapper " style="margin-top:200px;">
							 <div class="container">
									 <div class="page-header text-center">
											 <h2 style="margin-top:50px;">{{pagination.getTotalItemCount}} Offers Available</h2><br>

											 <img src="{{ asset('img/puntos.png')}}" class="puntos" align="center">
											 {% if pagination.getTotalItemCount == 0 %}

												 <div class="cta-btn " >

												 	 <button type="submit" class="btn btn-default btn-lg">Back</button>
												 </div>


{% endif %}

									 </div>
							 </div>
					 </div>

{% for offer in pagination %}

					 <div class="note" style="color:grey;">
						 <div class="row">
							 <div class="col-md-3">
									 <a href="/offers/{{ offer.id }}"><img class="offerPic" src="{{asset('uploads/offerPics/' ~ offer.picture)}}"></a>
							 </div>
							 <div class="col-md-9">
									 <a href="/offers/{{ offer.id }}"><h3>{{ offer.name }}</h3></a>

									 <i class="fa fa-map-marker"></i><span> Location: Valencia </span>&nbsp;
									 <i class="fa fa-calendar"></i><span> Date: {{ offer.beginDate }} - {{ offer.endDate }}</span>&nbsp;
									 <i class="fa fa-info"></i><a><span> Ref. Number: {{ offer.reference }}</span>&nbsp;
									 <hr>
									 <p> {{ offer.description }}{{ offer.picture}}</p>
							 </div>
						 </div><img src="{{ asset('img/spainFlag.png')}}" class="countryIcon"></a></div>
						 </a>
{% endfor %}


							 <!-- ========= End offers =========-->
							 <div class="row">
								  <div class="col-md-12">
										 <div class="navigation" style="text-align:center">
												 {{ knp_pagination_render(pagination) }}
										 </div>
									</div>
						  </div>
{% endblock %}
